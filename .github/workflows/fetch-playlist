name: Auto Fetch Playlist

on:
  schedule:
    - cron: "*/30 * * * *"   # tiap 30 menit
  workflow_dispatch:

jobs:
  fetch:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Fetch playlist
        run: |
          curl -L --max-time 60 \
            "http://ogibonetv.diskon.cloud/scriptYouTube.php" \
            -o playlist.m3u

      - name: Commit & Push
        run: |
          git config --global user.name "github-actions"
          git config --global user.email "actions@github.com"

          git add playlist.m3u
          git commit -m "Auto update playlist" || echo "No changes"
          git push
